<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="black">#FF000000</color>
    <color name="color_accent">#FFF500</color>
    <color name="color_accent_transparent">#FFFED8</color>
    <color name="color_main">#3051BB</color>
    <color name="color_main_light">#3051BB</color>
    <color name="gray">#686868</color>
    <color name="grayDark">#303030</color>
    <color name="grayLight">#cfdde8</color>
    <color name="ic_launcher_background">#FFF500</color>
    <color name="white">#FFFFFFFF</color>
    <color name="white_little_Violet">#F0DEFF</color>
    <dimen name="fab_margin">16dp</dimen>
    <string name="_16_00">16:00</string>
    <string name="action_settings">Settings</string>
    <string name="app_name">Amrh-chal</string>
    <string name="hello_blank_fragment">Hello blank fragment</string>
    <string name="matches">Matches</string>
    <string name="no_favorites_yet">No Favorites yet</string>
    <string name="premier_league">Premier League</string>
    <string name="saturday">Saturday</string>
    <string name="show_all">Show All</string>
    <string name="show_favorites">show Favorites</string>
    <string name="team_name_one">Team one</string>
    <string name="team_two">Team Two</string>
    <string name="week">Week</string>
    <style name="Base.Theme.Challenge" parent="Theme.Material3.DayNight.NoActionBar">

        
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryDark">@color/color_main</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:fontFamily">@font/main_font_bold</item>



    </style>
    <style name="MatchesRecyclerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <style name="RippleEffect">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="Theme.Challenge" parent="Base.Theme.Challenge"/>
    <style name="textDayStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/color_main</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/main_font_reguler</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="textPremierLeagueStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingHorizontal" ns1:targetApi="o">10dp</item>
        <item name="android:paddingVertical" ns1:targetApi="o">6dp</item>
        <item name="android:text">@string/premier_league</item>
        <item name="android:textColor" ns1:targetApi="o">@color/color_main_light</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textTeamNameStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/team_name_one</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginHorizontal" ns1:targetApi="o">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal" ns1:targetApi="o">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

    </style>
</resources>